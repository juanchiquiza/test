<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <EditText
        android:id="@+id/edtOperation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/app_operation"/>

    <Button
        android:id="@+id/btnOperation"
        android:layout_below="@+id/edtOperation"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_operation"
        android:onClick="clickOperation"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_margin="10dp"
        android:layout_below="@+id/btnOperation"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>